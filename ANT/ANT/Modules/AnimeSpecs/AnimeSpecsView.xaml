<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ji="clr-namespace:JikanDotNet;assembly=JikanDotNet"
             xmlns:VM="clr-namespace:ANT.Modules"
             xmlns:res="clr-namespace:ANT.Lang"
             xmlns:converter="clr-namespace:ANT.Converter"
             mc:Ignorable="d"
             x:Class="ANT.Modules.AnimeSpecsView"
             x:DataType="VM:AnimeSpecsViewModel"
            Shell.FlyoutBehavior="Disabled">




    <ContentPage Title="{res:Translate Details}" x:DataType="VM:AnimeSpecsViewModel">
        <ContentPage.Resources>
            <converter:DateConverter x:Key="DateConverter"/>

        </ContentPage.Resources>

        <Grid Margin="5,5,5,0"  RowSpacing="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="45*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>

            <Frame Padding="0,10,0,10">
                <Image Source="{Binding AnimeContext.ImageURL}"/>
            </Frame>
            <Frame Grid.Row="1" Padding="10,0,10,5">
                <Grid RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <ScrollView Grid.ColumnSpan="3" Orientation="Horizontal" >
                        <Label Text="{Binding AnimeContext.Title}" FontSize="28"/>
                    </ScrollView>

                    <StackLayout Grid.Row="1" Orientation="Vertical" Spacing="0" VerticalOptions="End"
                                 HorizontalOptions="Center" Margin="0,0,0,5">
                        <Label Text="{res:Translate Score}" FontSize="19" />
                        <Label Text="{Binding AnimeContext.Score}" FontSize="18" />
                    </StackLayout>
                    
                    <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource FavoriteRoundedButtonStyle}"
                            VerticalOptions="Center" HorizontalOptions="Center"
                            Command="{Binding FavoriteCommand}"/>
                    
                    <StackLayout Grid.Row="1" Grid.Column="2" Orientation="Vertical" HorizontalOptions="Center" 
                                 Spacing="0" VerticalOptions="End" Margin="0,0,0,5">
                        <Label Text="{res:Translate AiringStart}" FontSize="19"/>
                        <Label Text="{Binding AnimeContext.AiringStart, Converter={StaticResource DateConverter}}" FontSize="18"/>
                    </StackLayout>
                    
                </Grid>
            </Frame>
            <Grid Grid.RowSpan="3" Style="{StaticResource GridFullPageForActivityIndicatorStyle}"
                  IsVisible="{Binding IsLoading}">
                <ActivityIndicator IsVisible="{Binding IsLoading}"
                                   IsRunning="{Binding IsLoading}"/>
            </Grid>
        </Grid>
    </ContentPage>

    <ContentPage Title="{res:Translate Episodes}">
        <CollectionView ItemsSource="{Binding Episodes}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="ji:AnimeEpisode">
                    <Label Text="{Binding Title}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage>


</TabbedPage>